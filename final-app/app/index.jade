      li
        span Image 6
        div
          h4 Git
  .nav.top-bar(data-topbar)
    section.top-bar-section
      ul.text-area
        li.name
          a#ecode E_Code
        li.divider
      ul.left
        li.active
          a#home Home
        li.divider
      ul.right
        li.divider
             li.has-dropdown.full-width.not-click
                a(href='#')#jquery Jquery
                ul.dropdown
                  li.list
                    a.search#searchJQ Search
                    a.quiz#quizJQ Quiz
                    a.about#aboutJQ About Jquery
                    a.link#linkJQ Links Jquery
        li.divider
              li.has-dropdown.not-click
                a(href='#')#html-jade HTML/Jade
                ul.dropdown
                  li.list
                    a.search#searchHJ Search
                    a.quiz#quizHJ Quiz
                    a.about#aboutHJ About HTML/Jade
                    a.link#linkHJ Links HTML/Jade
        li.divider
              li.has-dropdown.not-click
                a(href='#')#java Javascript
                ul.dropdown
                  li.list
                    a.search#searchJS Search
                    a.quiz#quizJS Quiz
                    a.about#aboutJS About JS
                    a.link#linkJS Links JS
        li.divider
              li.has-dropdown.not-click
                a(href='#')#css CSS
                ul.dropdown
                  li.list
                    a.search#searchCSS Search
                    a.quiz#quizCSS Quiz
                    a.about#aboutCSS About CSS
                    a.link#linkCSS Links CSS
        li.divider
              li.has-dropdown.not-click
                a(href='#')#lodash LoDash
                ul.dropdown
                  li.list
                    a.search#searchLD Search
                    a.quiz#quizLD Quiz
                    a.about#aboutLD About LoDash
                    a.link#linkLD Links LoDash
        li.divider
              li.has-dropdown.not-click
                a(href='#')#git Git
                ul.dropdown
                  li.list
                    a.search#searchG Search
                    a.quiz#quizG Quiz
                    a.about#aboutG About Git
                    a.link#linkG Links Git
      .row
        .small-12.columns
          .panel#about(style='display: none')
            h1 About Us
            p E_Code was created by Lauren Bowser and Mitchell Hollander. 
            p We wanted to create a site that helped future developers learn how to code in a easy, less stressful manner.
            .row
              .small-6.columns
                #lauren.front
                  img#bbg(src='/media/bbg.gif')
                  #content1.back.hidden
                      a.links(href='https://github.com/lbowser')
                        i(class='fa fa-github-square fa-5x')
              .small-6.columns
                #mitch.front
                  img#zim(src='/media/zim2.png')
                  #content2.back.hidden 
                      a.links(href='https://github.com/MitchellSH')
                        i(class='fa fa-github-square fa-5x')
                      a.links(href='https://twitter.com/Mitch_Hollander')
                        i(class='fa fa-twitter-square fa-5x')
                      a.links(href='http://instagram.com/mitchell_hollander')
                        i(class='fa fa-instagram fa-5x')
                      a.links(href='https://plus.google.com/u/0/111891834390020142373/posts')
                        i(class='fa fa-google-plus-square fa-5x')
            .row
              .small-6.columns
                p#l Lauren Bowser
              .small-6.columns
                p#m Mitchell Hollander




      .row
        .small-12.columns
          #container
            button.tiny#start Start Quiz

      .row
        .small-12.columns
          #score

      .row
        .small-12.columns
          #container2
           table#tableQuestions
             col(style='width: 80%')
             col(style='width: 60%')
             tr
               th#nameQuiz
               th T or F
             tr
               td#q0
               td
                 .row
                   .small-6.columns
                     input(type='text').answer0
                   .small-6.columns
                     button.tiny.radius.submit1(data-qnum=0) submit
             tr
               td#q1
               td
                 .row
                   .small-6.columns
                     input(type='text').answer1
                   .small-6.columns
                     button.tiny.radius.submit2(data-qnum=1) submit
             tr
               td#q2
               td
                 .row
                   .small-6.columns
                     input(type='text').answer2
                   .small-6.columns
                     button.tiny.radius.submit3(data-qnum=2) submit
             tr
               td#q3
               td
                 .row
                   .small-6.columns
                     input(type='text').answer3
                   .small-6.columns
                     button.tiny.radius.submit4(data-qnum=3) submit
    

  .row
    .small-6.columns
      #scroll-box
         h3#scroll-header Search Scroll
         #scroll-contents
           p hello
